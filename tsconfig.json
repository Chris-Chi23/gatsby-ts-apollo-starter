{
  "compilerOptions": {
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "compose/*": ["compose/*"],
      "images/*": ["images/*"],
      "pages/*": ["pages/*"],
      "shema/*": ["shema/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
    }
  },
  "include": [
    "./src/**/*"
  ]
}